  "main": "index.js",
  "scripts": {
    "test": "eslint . && playwright test",
    "test:hw19": "playwright test --config=hw-lesson-19/playwright.config.ts",
    "test:hw19:mochawesome": "cross-env REPORTER=mochawesome playwright test --config=hw-lesson-19/playwright.config.ts && start mochawesome-report/mochawesome.html",
    "test:hw19:allure": "cross-env REPORTER=allure playwright test --config=hw-lesson-19/playwright.config.ts && npx allure serve allure-results",
    "test:hw19:browserstack": "npx browserstack-node-sdk playwright test --config=hw-lesson-19/playwright.config.ts",
    "test:hw19:all-reporters": "cross-env REPORTER=all playwright test --config=hw-lesson-19/playwright.config.ts",
    "allure:generate": "npx allure generate allure-results --clean -o allure-report",
    "allure:open": "npx allure open allure-report",
    "allure:serve": "npx allure serve allure-results"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "devDependencies": {
    "@eslint/js": "^9.39.1",
