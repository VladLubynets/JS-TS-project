    "@stylistic/eslint-plugin-ts": "^4.4.1",
    "@types/node": "^24.10.1",
    "allure-commandline": "^2.34.1",
    "allure-playwright": "^3.4.3",
    "browserstack-node-sdk": "^1.46.8",
    "cross-env": "^10.1.0",
    "eslint": "^9.39.1",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-unicorn": "^62.0.0",
